@model MVCMusicStoreApplication.Models.Album

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h2>Details</h2>
    <img src="~/Content/Images/placeholder.gif" />
    <p>
        <em>Artist:</em> @Model.Artist.Name
    </p>

    <p>
        <em>Price:</em> @String.Format("{0:F}", Model.Price)

    </p>

    <button>
        @Html.ActionLink("Add to Cart", "AddToCart", "ShoppingCart", new { id = Model.AlbumId }, null)
    </button>

</div>
